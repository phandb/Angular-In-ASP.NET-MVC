@model IEnumerable<AngularWebApplication.Player>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Player Detail</h2>
<br /><hr />

<div ng-controller="PlayerController">
    <table class="table table-dark table-bordered table-hover table-responsive">
        <tr>
            <td>ID:</td>
            <td>{{PlayerId}}</td>
        </tr>
        <tr>
            <td>Player Name:</td>
            <td>{{PlayerName}}</td>
        </tr>
        <tr>
            <td>Club</td>
            <td>{{PlayerClub}}</td>
        </tr>
        <tr>
            <td>Position</td>
            <td>{{PlayerPosition}}</td>
        </tr>
        <tr>
            <td>Joined Club On:</td>
            <td>{{PlayerJoinedClubOn}}</td>
        </tr>

    </table>
    <p class="btn btn-primary"> @Html.ActionLink("Back to List", "Index", null, new { style = "color:white" })</p>
</div>

